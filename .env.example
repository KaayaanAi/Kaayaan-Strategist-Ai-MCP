# Kaayaan Strategist MCP - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# üîê SECURITY WARNING
# ============================================================================
# NEVER commit your .env file to version control!
# The .env file is in .gitignore for your protection.
# Always use environment-specific values for production deployments.

# ============================================================================
# üìä DATABASE CONFIGURATION
# ============================================================================

# MongoDB Database Connection (Required)
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/kaayaan_strategist

# MongoDB Authentication (Optional - for production)
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=changeme

# Redis Cache Connection (Optional - improves performance)
# Replace with your actual Redis connection string  
REDIS_URL=redis://localhost:6379

# Redis Authentication (Optional - for production)
# REDIS_PASSWORD=changeme

# ============================================================================
# üîë API KEYS & AUTHENTICATION
# ============================================================================

# Alpha Vantage API Key (Optional - provides fallback data source)
# Get your free key at: https://www.alphavantage.co/support/#api-key
# Free tier: 25 requests/day, 5 requests/minute
# ALPHA_VANTAGE_API_KEY=your_api_key_here

# ============================================================================
# ‚öôÔ∏è APPLICATION CONFIGURATION
# ============================================================================

# Timezone for market analysis timestamps
# Examples: Asia/Kuwait, America/New_York, Europe/London, Asia/Tokyo
TIMEZONE=Asia/Kuwait

# Cache TTL in minutes (how long to store data in cache)
CACHE_TTL_MINUTES=15

# Environment mode
NODE_ENV=development

# ============================================================================
# üö¶ RATE LIMITING CONFIGURATION
# ============================================================================

# Yahoo Finance rate limit (requests per minute)
# Yahoo Finance is free and unlimited, but respect their servers
YAHOO_RATE_LIMIT=60

# Alpha Vantage rate limit (requests per minute)
# Free tier: 5 requests/minute, 25 requests/day
ALPHA_VANTAGE_RATE_LIMIT=5

# CoinGecko rate limit (requests per minute)
# Free tier: 50 requests/minute, 10,000-50,000 requests/month
COINGECKO_RATE_LIMIT=50

# ============================================================================
# üåê UNIVERSAL MCP SERVER CONFIGURATION
# ============================================================================

# Universal MCP Startup Modes:
# HTTP_MODE=true          : Enable HTTP REST API and HTTP MCP protocols
# WEBSOCKET_MODE=true     : Enable WebSocket MCP protocol
# UNIVERSAL_MODE=true     : Enable all protocols simultaneously
# (Default: STDIO MCP only for Claude Desktop compatibility)

# HTTP server configuration
HTTP_MODE=false
PORT=4000
HOST=0.0.0.0

# WebSocket server configuration  
WEBSOCKET_PORT=4001

# ============================================================================
# üõ°Ô∏è SECURITY CONFIGURATION
# ============================================================================

# Universal MCP Authentication (Optional)
# Set to 'true' to require API key authentication
ENABLE_AUTH=false

# API key for authentication (generate a secure random key)
# Example: openssl rand -hex 32
# API_KEY=your_secure_api_key_here

# Allowed origins for CORS (comma-separated, production only)
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# üîß PROTOCOL CONFIGURATION
# ============================================================================

# Individual protocol control (advanced users)
# Set to 'false' to disable specific protocols
ENABLE_STDIO=true
ENABLE_HTTP_REST=true  
ENABLE_HTTP_MCP=true
ENABLE_WEBSOCKET=true

# ============================================================================
# üîç DEBUGGING & LOGGING
# ============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable detailed debugging (development only)
DEBUG=false