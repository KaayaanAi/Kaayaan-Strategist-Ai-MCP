{
  "name": "mcp-kaayaan-strategist",
  "version": "2.1.0",
  "description": "Universal MCP server with quad-protocol support (STDIO MCP, HTTP REST, HTTP MCP, WebSocket MCP) for professional market analysis and systematic trading",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "kaayaan-strategist": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    ".env.example",
    ".env.production.example"
  ],
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "prepublishOnly": "npm run build",
    "start": "node build/index.js",
    "start:stdio": "node build/index.js",
    "start:http": "HTTP_MODE=true node build/index.js",
    "dev": "npm run build && npm run start",
    "dev:http": "npm run build && npm run start:http",
    "test": "npm run test:all",
    "test:all": "npm run build && node --test 'tests/**/*.test.js'",
    "test:unit": "npm run build && node --test 'tests/unit/*.test.js'",
    "test:integration": "npm run build && node --test 'tests/integration/*.test.js'",
    "test:indicators": "npm run build && node --test tests/unit/technical-indicators.test.js tests/unit/indicators-tool.test.js",
    "test:analysis": "npm run build && node --test tests/unit/market-analysis-tool.test.js",
    "test:mcp": "npm run build && node --test tests/integration/mcp-protocol.test.js",
    "test:api": "npm run build && node --test tests/integration/api-endpoints.test.js",
    "test:db": "npm run build && node --test tests/integration/database-connections.test.js",
    "test:watch": "npm run build && node --test --watch 'tests/**/*.test.js'",
    "test:http": "HTTP_MODE=true npm run test:all",
    "test:verbose": "npm run build && node --test --reporter=spec 'tests/**/*.test.js'",
    "test:coverage": "echo 'Coverage analysis requires additional tooling. Run individual test suites for detailed results.'",
    "test:performance": "npm run test:indicators && npm run test:analysis",
    "test:ci": "npm run build && node --test --reporter=tap 'tests/**/*.test.js'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "trading",
    "market-analysis",
    "technical-indicators",
    "finance",
    "claude",
    "ai",
    "rsi",
    "macd",
    "yahoo-finance",
    "coingecko",
    "cryptocurrency",
    "bitcoin",
    "ethereum",
    "crypto-analysis",
    "multi-asset",
    "mongodb",
    "redis",
    "kuwait",
    "http-api",
    "rest-api",
    "mcp-protocol",
    "n8n",
    "express",
    "stdio",
    "websocket",
    "universal-mcp",
    "quad-protocol",
    "financial-analysis",
    "stock-analysis",
    "crypto-trading",
    "trading-signals",
    "support-resistance",
    "moving-averages",
    "volatility-analysis",
    "typescript",
    "docker",
    "educational",
    "systematic-trading"
  ],
  "author": "Kaayaan Ai <admin@kaayaan.ai>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/ws": "^8.18.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "mongodb": "^6.9.0",
    "rate-limiter-flexible": "^5.0.3",
    "redis": "^4.7.1",
    "ws": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaayaan/mcp-kaayaan-strategist.git"
  },
  "homepage": "https://github.com/kaayaan/mcp-kaayaan-strategist#readme",
  "bugs": {
    "url": "https://github.com/kaayaan/mcp-kaayaan-strategist/issues"
  },
  "funding": {
